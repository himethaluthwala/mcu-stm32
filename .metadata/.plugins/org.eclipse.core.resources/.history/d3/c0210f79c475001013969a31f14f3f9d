 * Parameter 1:				Base address of the GPIO peripheral
 *
 * Return:					0 or 1
 *
 * Notes:					None
 *
 */

uint16_t GPIO_ReadFromInputPort(GPIO_RegDef_t *pGPIOx)
{


	return 0;
}

